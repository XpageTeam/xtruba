@media screen and (max-width: 1200px)

	.slider-one

		.slider
			&-nav
				width: 240px
				margin-right: 75px

			&-block__cont
				width: calc(100% - 315px)
		.slider-nav__item
			&:not(:first-child)
				margin-top: 20px

@media screen and (max-width: 1000px)

	.slider-one

		.slider-block__info
			max-width: 100%

		.slider-block__slide
			display: block !important


			&-img
				float: left
				margin: 0 20px 10px 0

		.slider-wr
			flex-direction: column

		.slider-nav
			margin-right: 0
			width: 100%

			&:after
				display: none

			.btn
				margin-top: 0px

			&__list
				display: flex

			&__link
				label
					&:before
						display: none

				input:checked ~ label
					padding-left: 23px !important
					color: #fff !important


		.slider-block
			&__cont
				width: 100%
				margin-top: 1.4rem

			.slick
				&-list
					margin: 0

	
	.slider-nav
		&__item 
			flex: none
			background: #fff





@media screen and (max-width: 667px)

	.slider-one
		.slider-block__info__title
			font-size: 1.2rem
			line-height: 1.2


	.slider-nav
		display: flex 
		flex-direction: column-reverse

		.btn 
			border-radius: 0
			padding: 10px 15px


		&__item
			margin: 0 !important
			border: 0



		&__link
			width: 100%
			> *
				width: 100%

@media screen and (max-width: 370px)
	
	.slider-one 
		&.slider-block
			&__slide-img
				float: none

			&__info__text 
				margin-bottom: 17px

		.slider-block__slide-img
			width: 100%
			margin: 0 0 20px 0

			img 
				width: 100%
